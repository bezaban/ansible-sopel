[core]
log_raw = false
logdir = {{ sopel_log_dir }}
pid_dir = {{ sopel_pid_dir }}
db_filename = {{ sopel_config_dir }}/default.db

prefix = {{ sopel_command_prefix }} 
help_prefix = {{ sopel_command_prefix }}

nick = {{ sopel_nick }}
auth_username = {{ sopel_auth_user }}
auth_password = {{ sopel_auth_pass }}
auth_method = {{ sopel_auth_method }}

host = {{ sopel_irc_host }}
use_ssl = true
verify_ssl = true
port = {{ sopel_irc_port }}

owner = {{ sopel_bot_owner }}
channels = {{ sopel_channels|join(',') }}
nick_blocks = {{ sopel_ignored_nicks|join(',') }}
host_blocks = {{ sopel_ignored_hosts|join(',') }}

bind_host = {{ sopel_bind_host }}
name = {{ sopel_name }}
user = {{ sopel_user }}

[admin]
hold_ground = false
auto_accept_invite = false

[wikipedia]
default_lang = en

[clock]
tz = {{ sopel_timezone }}
time_format = {{ sopel_time_format }}

{%if sopel_module_config.github is defined%}[github]
{%if sopel_module_config.github.webhook%}webhook = true
webhook_host = 127.0.0.1
webhook_port = 3333
external_url = {{ sopel_module_config.github.external_url }}
{%endif%}
client_id = {{ sopel_module_config.github.client_id }}
secret = {{ sopel_module_config.github.secret }}{%endif%}

{%if sopel_module_config.hackeriet is defined%}[hackeriet]
{%if sopel_module_config.hackeriet.webhook%}webhook = true
webhook_host = 127.0.0.1
webhook_port = 3334{{%endif%}}
secret = {{ sopel_module_config.hackeriet.secret }}{%endif%}

